<section class="section" style="background:#2C3E50">
<section class="hero is-primary" style="background: #0071a6">
  <div class="hero-body">
    <div class="container">
      <h1 class="title">Course Scheduler</h1>
      <h2 class="subtitle">
        Browse courses and plan a schedule, so registration is a breeze.
      </h2>
    </div>
  </div>
</section>

<section class="section" style="background:white">
  <div class="container" style="background:white">
    <div class="columns">
      <div class="column">
        <div class="buttons">
          <span class="button is-primary">Save schedule</span>
          <span class="button">Export schedule</span>
          <span class="button">Clear schedule</span>
        </div>
        <%= render 'components/course_search_form', academic_terms: @academic_terms, departments: @departments %>
      </div>
      <div class="column">
        <h3 class="has-text-weight-bold">Current schedule:</h3>
        [Courses here]
        <br>
        <br>
        <%= render 'components/course_schedule' %>
      </div>
    </div>
  </div>
</section>
</section>