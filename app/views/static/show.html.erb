<% content_for :header do %>
    <%= render 'components/page_header', :title => @page.title, :subtitle => @page.subtitle %>
<% end %>

<% if not @page.published and current_user.is_admin %>
    <div class="alert">This page is currently pending approval. Below is the pending copy.</div>
<% end %>

<% if current_user.is_admin %>
    <%= raw @page.pending_content %>
<% else %>
    <%= raw @page.approved_content %>
<% end %>