<% events = local_assigns.fetch(:events) %>
<% default_view = local_assigns.fetch(:default_view, 'month') %>

<div id="event-calendar">
</div>

<script>
    (function() {
      if($('#event-calendar').empty() == false) return; // weird workaround due to turbolinks reloading this script

      let events = <%= raw events.to_json %>;
      $('#event-calendar').fullCalendar({
          defaultView: '<%= default_view %>',
          header: {
              left: 'prev,next,today',
              center: 'title',
              right: 'listDay,basicWeek,month'
          },
          buttonText: {
              today:    'today',
              month:    'month',
              week:     'week',
              basicWeek: 'week',
              day:      'day',
              listDay: 'day'
          },
          allDaySlot: false,
          editable: false,
          events: events
      });
  })();
</script>